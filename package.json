{
  "name": "real-estate-management-system",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "lint:frontend": "eslint -c frontend/eslint.config.mjs \"frontend/src/**/*.{js,jsx,ts,tsx}\" --quiet",
    "lint:backend": "eslint -c backend/eslint.config.mjs \"backend/**/*.js\" --quiet",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "dev": "npm run lint:frontend && concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" --kill-others-on-fail \"npm run dev --workspace frontend\" \"npm run dev --workspace backend\"",
    "build": "npm run build --workspace frontend",
    "start": "npm run start --workspace backend",
    "prod": "npm run build && npm run start"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-spellcheck": "^0.0.20"
  },
  "dependencies": {
    "lucide-react": "^0.555.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "react-tooltip": "^5.30.0"
  }
}
